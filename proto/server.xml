<?xml version="1.0" encoding="utf-8"?>
<!--
    server.xml for ** Zia ** ->> server configuration file
  -->
<server>
  <config>
    <name>
      myZia
    </name>
    <port>
      4242
    </port>
    <shutdown>
      shutdown42
    </shutdown>
    <debug>
      true
    </debug>
    <respect_rfc>
      strict
    </respect_rfc>
  </config>
  <virtual_host>
    <rootdir value="~toto" />
    <host value="127.0.0.1" />
    <domain value="toto.com" />
    <logdir value="~toto/log" />
    <errdir value="~toto/err" />
  </virtual_host>
  <virtual_host>
    <rootdir value="~tata" />
    <host value="127.0.0.1" />
    <domain value="tata.com" />
    <logdir value="~tata/log" />
    <errdir value="~tata/err" />
  </virtual_host>
</server>
